<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/perceptionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- Image statique -->
    <ImageView
        android:id="@+id/animationImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/jumelles"
        android:contentDescription="Image du jeu de perception"
        android:layout_marginBottom="24dp" />

    <!-- Texte d’instruction -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquez pour démarrer le test de perception"
        android:textSize="18sp"
        android:textColor="@android:color/holo_purple"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <!-- Bouton de démarrage -->
    <Button
        android:id="@+id/btnPlayPerception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commencer"
        android:textSize="16sp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <Button
        android:id="@+id/btnFinish2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test mémoire terminé"
        android:visibility="gone"
        android:background="@drawable/btn_finish"
        android:layout_marginTop="16dp"/>


</LinearLayout>
