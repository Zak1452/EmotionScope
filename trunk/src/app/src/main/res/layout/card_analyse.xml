<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/accentColor"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/teal_700" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/ordreAnalyses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1️⃣"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/detailAnalyse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyse Faciale 😊"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/resultatBrefAnalyse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sourire détecté"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/pdf"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_telechargement_pdf"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                 />

            <ImageButton
                android:id="@+id/effacer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/effacer"
                android:padding="2dp"
                android:scaleType="centerInside"
                 android:adjustViewBounds="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>