<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Identifiez-vous "
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp" />


    <TextView
        android:id="@+id/affichageTexte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚀 Content de vous retrouver ! 🌍"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/saisieMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="?android:attr/textColorPrimary"
        android:textColorHint="?android:attr/textColorHint"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/saisieMDP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:textColor="?android:attr/textColorPrimary"
        android:textColorHint="?android:attr/textColorHint"
        android:inputType="textPassword"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Le reste de votre layout reste inchangé -->
    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscrivez-vous pour une meilleure expérience !"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btninscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>