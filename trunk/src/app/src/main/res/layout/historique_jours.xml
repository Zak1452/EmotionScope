<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29/04/2025"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:id="@+id/textViewResultatsCFV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageFaciale"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/analyse_faciale"
            android:visibility="visible"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/imageVocale"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/analyse_vocale"
            android:visibility="visible"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/imageCognitive"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/analyse_cognitive"
            android:visibility="visible"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/imageAnalyseGlobale"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/analyse_complete"
            android:visibility="visible"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textView0Analyse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pas d'analyse effectuÃ©e"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageFleche"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/fleche"/>
</LinearLayout>
