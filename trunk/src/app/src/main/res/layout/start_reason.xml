<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/reasoningLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/animationImage"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/engrenages"
            android:contentDescription="Image du jeu de raisonnement"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliquez pour démarrer le test de raisonnement"
            android:textSize="18sp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvSequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnPlayReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commencer le test"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnFinish3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test mémoire terminé"
            android:background="@drawable/btn_finish"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
